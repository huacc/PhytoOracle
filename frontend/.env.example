# PhytoOracle 前端环境变量示例文件
# 复制此文件为 .env.local 并填写实际值

# ================================
# API 配置
# ================================
# 后端 API 基础 URL
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# API 版本
NEXT_PUBLIC_API_VERSION=v1

# ================================
# Mock 数据配置
# ================================
# 是否使用 Mock 假数据（开发时无后端可设置为 true）
# true: 使用假数据，前端可独立运行
# false: 调用真实后端 API
NEXT_PUBLIC_USE_MOCK_DATA=false

# ================================
# 应用配置
# ================================
# 应用名称
NEXT_PUBLIC_APP_NAME=PhytoOracle

# 应用版本
NEXT_PUBLIC_APP_VERSION=1.0.0

# 运行环境（development | production）
NODE_ENV=development

# ================================
# 功能开关
# ================================
# 启用调试模式
NEXT_PUBLIC_DEBUG_MODE=false

# 启用Mock数据（已废弃，请使用 NEXT_PUBLIC_USE_MOCK_DATA）
NEXT_PUBLIC_ENABLE_MOCK=false

# ================================
# 文件上传配置
# ================================
# 图片上传大小限制（MB）
NEXT_PUBLIC_MAX_IMAGE_SIZE=10

# 支持的图片格式（逗号分隔）
NEXT_PUBLIC_ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,heic,webp

# 批量上传最大数量
NEXT_PUBLIC_MAX_BATCH_UPLOAD=50

# ================================
# 认证配置（如果需要）
# ================================
# JWT Token 存储 Key
NEXT_PUBLIC_TOKEN_KEY=phyto_auth_token

# Token 过期时间（小时）
NEXT_PUBLIC_TOKEN_EXPIRE_HOURS=24

# ================================
# 第三方服务（未来扩展）
# ================================
# 百度地图 API Key（如果需要位置功能）
# NEXT_PUBLIC_BAIDU_MAP_KEY=

# 七牛云存储（如果使用云存储）
# NEXT_PUBLIC_QINIU_DOMAIN=
# NEXT_PUBLIC_QINIU_BUCKET=
