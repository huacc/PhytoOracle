    "yellow_group": ["yellow", "light_yellow"],
    "white_group": ["white", "grayish_white"],
    "rust_group": ["orange", "rust"]
  },

  "_comment_similarity_scores": "不同匹配类型的相似度分数",
  "similarity_scores": {
    "exact_match": 1.0,
